<html>
  <head>
  <style>
      body {
        <% if message == "Way too high!" || message == "Way too low!" %>
          background: red;
        <% elsif message == "Correct!" %>
          background: green;
        <% else %>
          background: #FFE5E5;
        <%end%>
      }
    </style>
    </head>
  <body>
    <div style="text-align: center">
      <p>
      <% if number == params['guess'].to_i %>
        <p>
          The secret number is <%= number %>!
        </p>
        <%end%>
      <%= message %>
    </p>
    </div>

    <div style="text-align: center">
      <form>
        <input type='text' name='guess' />
        <input type='submit' value='Guess!' />
      </form>
    </div>
  </body>
</html>
